{
  "compilerOptions": {
    "types": [
      "mocha",
      "chai",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true
  },
  "include": [
    "tests/**/*",
    "app/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}